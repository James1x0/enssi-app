<h1>Control the enssi bot</h1>
<hr />

<div class="row">
  <div class="col-md-8">
    {{#view "bot-control" eventType="move" eventDirection="FWD"}}
      FWD
    {{/view}}

    {{#view "bot-control" eventType="move" eventDirection="BWD"}}
      BWD
    {{/view}}

    {{#view "bot-control" eventType="shoot"}}
      PEWPEW
    {{/view}}

    {{#view "bot-control" eventType="turn" eventDirection="left"}}
      Turn Left
    {{/view}}

    {{#view "bot-control" eventType="turn" eventDirection="right"}}
      Turn Right
    {{/view}}

    {{#view "bot-control" eventType="turnPrecise" eventDirection="left" eventDegrees=360 noStop=true}}
      360 Left
    {{/view}}

    {{#view "bot-control" eventType="turnPrecise" eventDirection="right" eventDegrees=360 noStop=true}}
      360 Right
    {{/view}}
  </div>
  <div class="col-md-4">
    <h3>Connected Users</h3>
    <hr />
    <ul>
      {{#each user in socket.users}}
        <li>{{user}}</li>
      {{else}}
        No users!
      {{/each}}
    </ul>
  </div>
</div>
